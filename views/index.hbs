<div class="header">
    <div><h1>MIPT TicTacToe</h1></div>
    <div><h3 id="login">Ваш логин:</h3></div>
    <div><h3 id="nextPlayer">Очередь игрока:</h3></div>
    <div><h4 id="timer"></h4></div>
</div>

<div class="container">
    <div>
        <table class="map-field">
            {{#each map}}
                <tr>
                    {{#each this}}
                        <th class="map-item-container"><input id="{{@../index}} {{@index}}"
                                                              class="map-item"
                                                              type="submit"
                                                              value=""
                                                              onclick="sendClick({{@../index}}, {{@index}})"/></th>
                    {{/each}}
                </tr>
            {{/each}}
        </table>
    </div>
</div>

<div class="chat">
    <div id="log"></div>
    <div class="message-input">
        <input type="text" id="message-input">
        <input type="submit" id="send" value="Send">
    </div>
</div>

<br>
